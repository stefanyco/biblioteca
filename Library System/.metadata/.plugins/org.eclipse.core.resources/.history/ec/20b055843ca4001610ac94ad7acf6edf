package biblioteca.servlets;

import java.io.IOException;


import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import biblioteca.dao.EditoraDAO;
import biblioteca.entities.Editora;

/**
 * Servlet implementation class EditoraServlet
 */
@WebServlet("/editoraAdicionar")
public class EditoraServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	@Override
	protected void service(HttpServletRequest request, HttpServletResponse respnse) throws ServletException, IOException {

		String nome = request.getParameter("nome");

		EditoraDAO dao;
		Editora editora = new Editora(nome);
		
		try {
			dao = new EditoraDAO();
			dao.inserir(editora);
		} catch (Exception e) {
			e.printStackTrace();
		}
		
		request.getRequestDispatcher("editoraListar.jsp").forward(request, respnse);

	}

}
